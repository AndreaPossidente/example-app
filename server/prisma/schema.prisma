// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  username    String       @unique
  password    String
  role        Role         @default(USER)
  permissions Permission[] @default([CAN_READ_PERSONAL_PROFILE, CAN_UPDATE_PERSONAL_PROFILE])
}

enum Role {
  USER
  ADMIN
}

enum Permission {
  CAN_DELETE
  CAN_INSERT
  CAN_UPDATE
  CAN_READ_PERSONAL_PROFILE
  CAN_UPDATE_PERSONAL_PROFILE
  CAN_FETCH
}
