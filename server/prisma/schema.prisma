// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username    String       @unique
  password    String
  role        Role         @default(USER)
  permissions Permission[] @default([CAN_READ_PERSONAL_PROFILE, CAN_UPDATE_PERSONAL_PROFILE])
}

enum Role {
  USER
  ADMIN
}

// tutti i permessi che si possono assegnare agli utenti
// i ruoli devono essere in una tabelle e i permessi devono essere assegnati a seconda del ruolo
enum Permission {
  CAN_DELETE
  CAN_INSERT
  CAN_UPDATE
  CAN_READ_PERSONAL_PROFILE
  CAN_UPDATE_PERSONAL_PROFILE
  CAN_FETCH // pu√≤ vedere i dati
}
